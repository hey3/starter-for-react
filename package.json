{
  "name": "starter-for-react",
  "version": "1.0.0",
  "description": "hey3's boilerplate for Web Frontend",
  "keywords": [
    "react",
    "typescript"
  ],
  "homepage": "https://github.com/hey3/starter-for-react#readme",
  "bugs": {
    "url": "https://github.com/hey3/starter-for-react/issues"
  },
  "license": "MIT",
  "author": "hey3",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hey3/starter-for-react.git"
  },
  "scripts": {
    "build-storybook": "build-storybook",
    "build:dev": "BUILD_MODE='development' REACT_APP_ENV='development' webpack",
    "build:local": "BUILD_MODE='development' REACT_APP_ENV='local' webpack",
    "build:prod": "BUILD_MODE='production' REACT_APP_ENV='production' webpack",
    "build:stg": "BUILD_MODE='production' REACT_APP_ENV='staging' webpack",
    "fix": "fixpack",
    "format": "prettier --write './src/**/*.{ts,tsx,json,js}'",
    "lint": "yarn lint:eslint && yarn lint:style",
    "lint:eslint": "eslint 'src/**/*.ts{,x}'",
    "lint:style": "stylelint 'src/**/*.ts{,x}'",
    "start:dev": "BUILD_MODE='development' REACT_APP_ENV='development' webpack serve",
    "start:local": "BUILD_MODE='development' REACT_APP_ENV='local' webpack serve",
    "start:prod": "BUILD_MODE='production' REACT_APP_ENV='production' webpack serve",
    "start:stg": "BUILD_MODE='production' REACT_APP_ENV='staging' webpack serve",
    "storybook": "start-storybook -p 6006",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --passWithNoTests --coverage",
    "test:virtual-update": "jest --updateSnapshot",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "core-js": "^3.19.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "styled-components": "^5.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@stylelint/postcss-css-in-js": "^0.37.2",
    "@storybook/addon-a11y": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-knobs": "^6.3.1",
    "@storybook/addons": "^6.3.12",
    "@storybook/builder-webpack5": "^6.3.12",
    "@storybook/manager-webpack5": "^6.3.12",
    "@storybook/react": "^6.3.12",
    "@storybook/theming": "^6.3.12",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.35",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.2",
    "@types/react-test-renderer": "^17.0.1",
    "@types/styled-components": "^5.1.15",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "babel-loader": "^8.2.3",
    "dotenv-webpack": "^7.0.3",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "fixpack": "^4.0.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.3.1",
    "jest-styled-components": "^7.0.6",
    "postcss-syntax": "^0.36.2",
    "prettier": "^2.4.1",
    "react-test-renderer": "^17.0.2",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4",
    "webpack": "^5.64.1",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.5.0"
  }
}
