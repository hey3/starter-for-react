{
  extends: ['config:base'],
  timezone: 'Asia/Tokyo',
  schedule: ['every weekend'],
  lockFileMaintenance: {
    enabled: true,
    automerge: true,
    schedule: ['before 3am on the first day of the month'],
  },
  labels: ['renovate'],
  commitMessagePrefix: 'ci: ',
  vulnerabilityAlerts: {
    labels: ['security'],
  },
  enabledManagers: ['npm', 'github-actions'],
  separateMinorPatch: true,
  patch: {
    automerge: true,
  },
  packageRules: [
    {
      groupName: 'Typescript',
      matchPackageNames: ['typescript'],
    },
    {
      groupName: 'React families',
      matchPackageNames: ['react', 'react-dom', '@types/react', '@types/react-dom'],
    },
    {
      groupName: 'Routing families',
      matchPackageNames: ['react-router-dom'],
    },
    {
      groupName: 'Styling families',
      matchPackageNames: ['styled-components', '@types/styled-components'],
    },
    {
      groupName: 'ESLint families',
      matchPackageNames: ['eslint'],
      matchPackagePatterns: ['^eslint', '^@typescript-eslint'],
    },
    {
      groupName: 'StyleLint families',
      matchPackageNames: ['stylelint', 'postcss-syntax'],
      matchPackagePatterns: ['^stylelint', '^@stylelint'],
    },
    {
      groupName: 'Formatter families',
      matchPackageNames: ['prettier'],
    },
    {
      groupName: 'Test families',
      matchPackageNames: ['vitest', 'jsdom'],
    },
    {
      groupName: 'Test Utility families',
      matchPackagePatterns: ['^@testing-library'],
    },
    {
      groupName: 'Storybook families',
      matchPackagePatterns: ['^@storybook'],
    },
    {
      groupName: 'Builder families',
      matchPackageNames: ['vite', '@vitejs/plugin-react', '@storybook/builder-vite'],
    },
  ],
}
