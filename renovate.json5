{
  extends: ['config:base'],
  timezone: 'Asia/Tokyo',
  schedule: ['every weekend'],
  lockFileMaintenance: {
    enabled: true,
    automerge: true,
    schedule: ['before 3am on the first day of the month'],
  },
  labels: ['renovate'],
  commitMessagePrefix: 'ci: ',
  vulnerabilityAlerts: {
    labels: ['security'],
  },
  enabledManagers: ['npm'],
  separateMinorPatch: true,
  patch: {
    automerge: true,
  },
  packageRules: [
    {
      groupName: 'Lint families',
      matchPackageNames: ['eslint', 'prettier', 'stylelint', 'postcss-syntax'],
      matchPackagePatterns: ['^eslint-', '^@typescript-eslint', '^stylelint-', '@stylelint/'],
    },
    {
      groupName: 'Test families',
      matchPackageNames: ['vitest', 'jsdom'],
      matchPackagePatterns: ['^@testing-library'],
    },
    {
      groupName: 'Typescript',
      matchPackageNames: ['typescript'],
    },
    {
      groupName: 'React families',
      matchPackageNames: [
        'react',
        'react-dom',
        '@types/react',
        '@types/react-dom',
      ],
    },
    {
      groupName: 'Routing families',
      matchPackageNames: ['react-router-dom']
    }
    {
      groupName: 'Storybook families',
      matchPackagePatterns: ['^@storybook'],
    },
    {
      groupName: 'Styled-components families',
      matchPackageNames: ['styled-components', '@types/styled-components'],
    },
    {
      groupName: 'Builder families',
      matchPackageNames: ['vite', '@vitejs/plugin-react', '@storybook/builder-vite'],
    },
  ],
}
